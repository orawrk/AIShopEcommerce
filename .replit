modules = ["python-3.11", "python3", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "glibcLocales", "libiconv", "libxcrypt", "mysql80", "openssl", "pkg-config", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ML API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MySQL Database"

[[workflows.workflow]]
name = "ML API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ml_api.py"
waitForPort = 8000

[[workflows.workflow]]
name = "FastAPI Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python main.py"
waitForPort = 8001

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main_app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "MySQL Database"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysqld --datadir=/tmp/mysql_data --socket=/tmp/mysql.sock --port=3306 --user=runner --skip-networking=false --bind-address=0.0.0.0"

[[ports]]
localPort = 3306
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 3000

[[ports]]
localPort = 33060
externalPort = 3001
